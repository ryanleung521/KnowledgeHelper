<Window x:Class="DesktopKnowledgeHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopKnowledgeHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TreeView x:Name="KnowledgeTreeDisplay" HorizontalAlignment="Left" Height="149" Margin="54,68,0,0" VerticalAlignment="Top" Width="179"
                  ItemsSource="{Binding RootNodes}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local:DisplayEntry}"
                                                        ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Entry.title}"/>
                </HierarchicalDataTemplate>

                <Style TargetType="{x:Type TreeViewItem}">
                    <EventSetter Event="MouseDown" Handler="TextBlock_MouseDown"/>
                </Style>
            </TreeView.Resources>
        </TreeView>
        <TextBlock HorizontalAlignment="Left" Height="75" Margin="376,142,0,0" TextWrapping="Wrap" Text="{Binding Testing}" VerticalAlignment="Top" Width="216"/>
    </Grid>
</Window>
